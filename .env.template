# ===========================
# ECONEURA Environment Variables
# Copy this file to .env and update values
# ===========================

# === Database Configuration ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=econeura_dev
DB_USER=econeura
DB_PASSWORD=dev_password

# === JWT Authentication ===
JWT_SECRET=CHANGE-THIS-IN-PRODUCTION-USE-LONG-RANDOM-STRING
ACCESS_TOKEN_EXPIRE_MINUTES=60

# === Python API Proxy ===
PORT=8080
HOST=127.0.0.1
MAKE_FORWARD=0
MAKE_TOKEN=your-make-token-here
MAKE_TIMEOUT=30

# === Azure OpenAI Configuration ===
# Get these from Azure Portal -> Azure OpenAI -> Keys and Endpoint
AZURE_OPENAI_API_ENDPOINT=https://YOUR-RESOURCE.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT=gpt-4

# === Observability (OpenTelemetry) ===
OTLP_ENDPOINT=http://localhost:4317
ENV=dev

# === Auth Service ===
ALLOW_REGISTRATION=1

# === Frontend ===
VITE_API_URL=http://localhost:8080
VITE_AUTH_URL=http://localhost:8081

# === Service Ports ===
AUTH_SERVICE_PORT=8081
ANALYTICS_PORT=8101
CDO_PORT=8102
CFO_PORT=8103
CHRO_PORT=8104
CISO_PORT=8105
CMO_PORT=8106
CTO_PORT=8107
LEGAL_PORT=8108
RECEPTION_PORT=8109
RESEARCH_PORT=8110
SUPPORT_PORT=8111

# === Docker PostgreSQL ===
POSTGRES_USER=econeura
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=econeura_dev
